            @Html.DisplayFor(modelItem => item.EngagementManagerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectManagerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdditionalNotes)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditProject", new { id=item.ProjectId }) |
