@model Silicus.Finder.Models.DataObjects.SkillSet

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm(new { id = "Technologyform" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Technology</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2", id = "TechnologyName" })
            <span id="technologyNameErrorMessage"></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description,8,33, new { htmlAttributes = new { @class = "form-control",resize= "none" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                @Html.ActionLink("Cancel", "GetAllSkillSet", "Technology", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
<script src="js/jquery.js"></script>
<script src="js/jquery-validate.js"></script>
<script>
    $("#Technologyform").validate(
      {
          rules:
          {
              TechnologyName:
              {
                  required: true
              }
          },
          messages:
          {
              fullname:
              {
                  required: "Please enter Technology name"
              }
          }
      });
</script>

